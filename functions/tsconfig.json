{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitReturns": true,
        "noUnusedLocals": false,
        "outDir": "lib",
        "sourceMap": true,
        "strict": true,
        "target": "es2018",
        "esModuleInterop": true,
        "declaration": true,
        "resolveJsonModule": true,
        "skipLibCheck": true
    },
    "compileOnSave": true,
    "include": [
        "src"
    ]
}